# JOE syntax highlight file for FORTRAN

=Idle
=Comment 	green
=Constant 	cyan
=Escape 	bold cyan
=Type 		bold
=Keyword 	bold
=Intrinsic	bold

# First character of line...

:reset Idle
	*		idle		noeat
	"\n"		reset
	"cC*"		comment		recolor=-1

:comment Comment
	*		comment
	"\n"		reset

:idle Idle
	*		idle
	"!"		comment		recolor=-1
	"\n"		reset
	"0-9"		first_number	recolor=-1
	"."		maybe_float
	"'"		string		recolor=-1
	"a-zA-Z_"	ident		buffer

:first_number Constant
	*		idle	noeat	recolor=-1
	"0-9"		first_number
	"."		second_number
	"eE"		epart

:maybe_float Constant
	*		idle	recolor=-2	noeat
	"0-9"		second_number		recolor=-2

:second_number Constant
	*		idle	noeat	recolor=-1
	"eE"		epart
	"0-9"		second_number

:epart Constant
	*		idle	noeat	recolor=-1
	"0-9+\-"	enum

:enum Constant
	*		idle	noeat	recolor=-1
	"0-9"		enum

# String

:string	Constant
	*		string
	"\n"		reset
	"'"		maybe_end_string

:maybe_end_string Constant
	*		idle	noeat
	"'"		string

